{
    "env": {
        "es6": true,
        "mocha": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 7,
        "ecmaFeatures": {
            "impliedStrict": true,
            "modules": true
        },
        "sourceType": "module"
    },
    "rules": {
        "camelcase": [0],
        "indent": [
            2,
            4
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "no-multi-spaces" : [0],
        "no-use-before-define" : [2, "nofunc"],
        "no-underscore-dangle" : [0],
        "quotes" : [0, "single"],
        "semi": [
            2,
            "always"
        ]
    }
}
